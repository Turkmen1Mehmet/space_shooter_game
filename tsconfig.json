{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
